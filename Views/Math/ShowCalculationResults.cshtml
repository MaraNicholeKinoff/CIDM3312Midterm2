@model MathOperation

<h1>Calculation Results</h1>

<div class="row">
    <div class="column">
        <h2>Right Operand </h2>
        <p>@Model.rightOperand </p> 
    </div>
    <div class="column">
        <h2>Left Operand</h2>
        <p>@Model.leftOperand</p>
    </div>
    <div class="column">
        <h2>Operation Type</h2>
        <p>@Model.Operator</p>
    </div>
    <div class="column">
        <h2>Calculated Result</h2>
        <p>@Model.result</p>
    </div>
</div> 